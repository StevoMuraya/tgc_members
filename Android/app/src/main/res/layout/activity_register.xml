<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:id="@+id/splash_logo_card"
                    android:background="#FFF"
                    android:alpha="1"
                    app:cardBackgroundColor="#FFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintVertical_bias="0.736">
                    <ImageView
                        android:id="@+id/splash_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="13dp"
                        android:src="@drawable/logo" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/page_splash_name"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/page_splash_name2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Tigoni Baptist"
                    android:textColor="#000"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/page_splash_name2"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Church"
                    android:textColor="#000"
                    android:textSize="25sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="casual"
                android:gravity="center"
                android:padding="30dp"
                android:text="Fill out the form below to register"
                android:textColor="#000" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="11dp"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:hintTextColor="@color/colorPrimary"
                    app:placeholderTextColor="@color/colorPrimary"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:padding="3dp">

                    <EditText
                        android:id="@+id/et_name_reg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:fontFamily="casual"
                        android:hint="Fullname"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="11dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:hintTextColor="@color/colorPrimary"
                    android:fontFamily="casual"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:padding="3dp">

                        <EditText
                            android:id="@+id/et_phone_register"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#FFF"
                            android:hint="Phone Number"
                            android:fontFamily="casual"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            tools:layout_editor_absoluteX="8dp" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="11dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="casual"
                    app:hintTextColor="@color/colorPrimary"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:padding="3dp">

                    <EditText
                        android:id="@+id/et_password_reg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:hint="Password"
                        android:fontFamily="casual"
                        android:inputType="textPassword"
                        android:maxLength="9"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#000"
                        tools:layout_editor_absoluteX="8dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardView5"
                android:layout_height="wrap_content"
                android:elevation="11dp"
                android:fontFamily="casual"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="casual"
                    app:hintTextColor="@color/colorPrimary"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:padding="3dp">

                    <EditText
                        android:id="@+id/et_confirm_password_reg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:fontFamily="casual"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLength="9"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#000"
                        tools:layout_editor_absoluteX="8dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:text="Register"
                android:id="@+id/bt_reg_register"
                android:background="@drawable/button_accent"
                android:textColor="#FFF"
                android:elevation="15dp" />

            <ProgressBar
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/loading_reg"
                android:backgroundTint="#dedede"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:alpha=".3"
        android:id="@+id/loading_screen_reg"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:background="#000"/>

</RelativeLayout>